{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "@aotoki/claudekit",
      "changelog-path": "CHANGELOG.md",
      "exclude-paths": [
        "packages/**",
        "plugins/**"
      ]
    },
    "packages/config": {
      "release-type": "node",
      "package-name": "@claudekit/config",
      "changelog-path": "CHANGELOG.md",
      "component": "@claudekit/config"
    },
    "packages/hook": {
      "release-type": "node",
      "package-name": "@claudekit/hook",
      "changelog-path": "CHANGELOG.md",
      "component": "@claudekit/hook"
    },
    "plugins/dependabot": {
      "release-type": "simple",
      "package-name": "@aotoki/claudekit-dependabot",
      "changelog-path": "CHANGELOG.md",
      "component": "dependabot",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/git": {
      "release-type": "node",
      "package-name": "@aotoki/claudekit-git",
      "changelog-path": "CHANGELOG.md",
      "component": "git",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/license": {
      "release-type": "simple",
      "package-name": "@aotoki/claudekit-license",
      "changelog-path": "CHANGELOG.md",
      "component": "license",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/rubric": {
      "release-type": "node",
      "package-name": "@aotoki/claudekit-rubric",
      "changelog-path": "CHANGELOG.md",
      "component": "rubric",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/chrome-devtools-mcp": {
      "release-type": "simple",
      "package-name": "@milo/claudekit-chrome-devtools-mcp",
      "changelog-path": "CHANGELOG.md",
      "component": "chrome-devtools-mcp",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/worktree-manager": {
      "release-type": "simple",
      "package-name": "@milo/claudekit-worktree-manager",
      "changelog-path": "CHANGELOG.md",
      "component": "worktree-manager",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/one-ui-migration": {
      "release-type": "simple",
      "package-name": "@milo/claudekit-one-ui-migration",
      "changelog-path": "CHANGELOG.md",
      "component": "one-ui-migration",
      "extra-files": [".claude-plugin/plugin.json"]
    },
    "plugins/milo-core": {
      "release-type": "simple",
      "package-name": "@milo/claudekit-milo-core",
      "changelog-path": "CHANGELOG.md",
      "component": "milo-core",
      "extra-files": [".claude-plugin/plugin.json"]
    }
  },
  "release-search-depth": 400,
  "separate-pull-requests": true,
  "always-link-local": false
}
