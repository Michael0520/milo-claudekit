{
  "description": "Automatic code review and formatting after Edit or Write operations",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/dist/review.js"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/dist/format.js"
          }
        ]
      }
    ]
  }
}
